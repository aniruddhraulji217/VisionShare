@model IEnumerable<VisionShare.Models.Idea>

<h2 class="mt-3">My Ideas</h2>

<!-- Create new idea button -->
<a class="btn btn-primary mb-3" asp-controller="Idea" asp-action="Create">
    + Create New Idea
</a>

<hr />

@if (!Model.Any())
{
    <div class="text-center mt-5">
        <h4>You haven't created any ideas yet.</h4>
        <p>Start by creating your first idea.</p>

        <a class="btn btn-success" asp-controller="Idea" asp-action="Create">
            Create Your First Idea
        </a>
    </div>
}
else
{
    <div class="row">
        @foreach (var idea in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">

                    <!-- Feature Image -->
                    <img src="@idea.FeatureImagePath"
                         class="card-img-top"
                         style="height:250px; object-fit:cover;" />

                    <div class="card-body">

                        <!-- Title -->
                        <h5 class="card-title">@idea.Title</h5>

                        <!-- Posted date -->
                        <p class="text-muted mb-1">
                            Posted on @idea.DatePosted.ToShortDateString()
                        </p>

                        <!-- Stats -->
                        <p class="small text-muted">
                            <b>@idea.UpvoteCount</b> Likes •
                            <b>@idea.ViewCount</b> Views
                        </p>

                        <!-- Action Buttons -->
                        <a asp-controller="Idea"
                           asp-action="Details"
                           asp-route-id="@idea.IdeaId"
                           class="btn btn-sm btn-primary">
                            View
                        </a>

                        <a class="btn btn-sm btn-warning"
                           asp-controller="Idea"
                           asp-action="Edit"
                           asp-route-id="@idea.IdeaId">
                            Edit
                        </a>


                        <form method="post" asp-controller="Idea" asp-action="DeleteConfirmed" asp-route-id="@idea.IdeaId"
                              onsubmit="return confirm('Are you sure you want to delete this idea?');"
                              style="display:inline;">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>


                    </div>
                </div>
            </div>
        }
    </div>
}
