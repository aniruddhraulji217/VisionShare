@model IEnumerable<VisionShare.Models.Idea>

@{
    ViewData["Title"] = "VisionShare - Home";
}

<style>
    body {
        background: #0b0e11;
        color: #e9eef2;
    }

    .hero {
        border-radius: 16px;
        padding: 90px 40px;
        color: #fff;
        background: url('/images/hero.jpg') center/cover no-repeat;
        position: relative;
        overflow: hidden;
    }

    .hero-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.55);
        backdrop-filter: blur(2px);
    }

    .hero-content {
        position: relative;
        z-index: 2;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.45);
    }

    .idea-card {
        background: #111318;
        border-radius: 12px;
        padding: 20px;
        transition: 0.25s ease;
        border: 1px solid rgba(255, 255, 255, 0.05);
    }

        .idea-card:hover {
            transform: translateY(-3px);
            border-color: #5bc0de;
            box-shadow: 0 4px 12px rgba(91, 192, 222, 0.15);
        }

    .idea-img {
        width: 100%;
        border-radius: 8px;
        margin-bottom: 10px;
        max-height: 180px;
        object-fit: cover;
    }

    .section-title {
        font-weight: 600;
        margin-bottom: 15px;
        border-left: 4px solid #5bc0de;
        padding-left: 10px;
    }

    .btn-cta {
        background: #5bc0de;
        color: #041018;
        font-weight: 600;
        border-radius: 8px;
        padding: 10px 18px;
    }

    .side-card {
        background: #111318;
        border-radius: 10px;
        padding: 20px;
        border: 1px solid rgba(255,255,255,0.05);
    }

</style>


<div class="container mt-4">

    <!-- HERO -->
    <div class="hero mb-5">
        <div class="hero-overlay"></div>

        <div class="hero-content">
            <h1 class="display-4 fw-bold">Welcome to VisionShare</h1>
            <p class="lead mb-4">
                Share your ideas. Get feedback. Explore creativity from people across the world.
            </p>

            <div class="d-flex gap-2">
                <a class="btn btn-cta" asp-controller="Idea" asp-action="Create">Share Idea</a>
                <a class="btn btn-outline-light" asp-controller="Idea" asp-action="Index">Browse Ideas</a>
            </div>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="row">

        <!-- LATEST IDEAS -->
        <div class="col-md-8">
            <h4 class="section-title">Latest Ideas</h4>

            <div class="row g-3">
                @if (Model != null && Model.Any())
                {
                    foreach (var idea in Model.Take(6))
                    {
                        <div class="col-md-6">
                            <div class="idea-card">

                                @if (!string.IsNullOrWhiteSpace(idea.FeatureImagePath))
                                {
                                    <img class="idea-img" src="@idea.FeatureImagePath" />
                                }

                        <h5 class="fw-bold">@idea.Title</h5>

                        <p>
                            @(idea.Description.Length > 120
                                                        ? idea.Description.Substring(0, 120) + "..."
                                                        : idea.Description)
                        </p>

                                <div class="d-flex justify-content-between">
                                    <a class="btn btn-sm btn-outline-light"
                                       asp-controller="Idea"
                                       asp-action="Details"
                                       asp-route-id="@idea.IdeaId">View</a>

                                    <span class="text-info">
                                        ❤️ @idea.UpvoteCount
                                    </span>
                                </div>

                            </div>
                        </div>
                                }
                }
                else
                {
                    <div class="alert alert-secondary">No ideas yet. Be the first to share!</div>
                }
            </div>
        </div>


        <!-- RIGHT SIDE PANEL -->
        <div class="col-md-4">
            <div class="side-card mb-3">
                <h5>Get Started</h5>
                <p>Create your account and start sharing your vision.</p>

                <a class="btn btn-cta w-100 mb-2"
                   asp-area="Identity"
                   asp-page="/Account/Login">Login</a>

                <a class="btn btn-outline-light w-100"
                   asp-area="Identity"
                   asp-page="/Account/Register">Register</a>
            </div>

            <div class="side-card">
                <h5>🌟 Why VisionShare?</h5>
                <ul class="mt-2">
                    <li>Fast & clean idea sharing</li>
                    <li>Upvotes & engagement</li>
                    <li>Track your contributions</li>
                    <li>Community-driven creativity</li>
                </ul>
            </div>
        </div>

    </div>
</div>
